<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 w-full min-h-screen">
    <div class="max-w-4xl mx-auto py-10">
        <!-- Header -->
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">To-Do List</h1>

        <!-- Add New Task -->
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <form action="/tasks" method="POST">
                <div class="mb-4">
                    <label for="title" class="block text-gray-700 font-medium mb-2">Task Title</label>
                    <input type="text" id="title" name="title" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter task title" required>
                </div>
                <div class="mb-4">
                    <label for="description" class="block text-gray-700 font-medium mb-2">Description</label>
                    <textarea id="description" name="description" class="w-full px-4 py-2 resize-none border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter task description"></textarea>
                </div>
                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition">Add Task</button>
            </form>
        </div>

        <!-- Task List -->
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Tasks</h2>
        <ul class="space-y-4">
            <% tasks.forEach(task => { %>
                <li class="bg-white shadow rounded-lg p-4 flex justify-between items-center">
                    <div>
                        <p class="text-lg font-semibold text-gray-700"><%= task.title %></p>
                        <p class="text-gray-500"><%= task.description %></p>
                        <% if (task.isCompleted) { %>
                            <span class="inline-block mt-2 px-3 py-1 text-sm font-medium text-green-800 bg-green-200 rounded-full">Completed</span>
                        <% } %>
                    </div>
                    <div class="flex space-x-2">
                        <% if (!task.isCompleted) { %>
                            <a href="/tasks/<%= task._id %>/edit" class="px-4 py-2 text-sm text-white bg-yellow-500 rounded-lg hover:bg-yellow-600 transition">Edit</a>
                            <a href="/tasks/<%= task._id %>/complete" class="px-4 py-2 text-sm text-white bg-green-500 rounded-lg hover:bg-green-600 transition">Mark Complete</a>
                        <% } %>
                        <a href="/tasks/<%= task._id %>/delete" class="px-4 py-2 text-sm text-white bg-red-500 rounded-lg hover:bg-red-600 transition">Delete</a>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</body>

</html>
